        {
          "text": "Create Kanban board",
          "value": "kanban"
        },
        {
          "text": "Create Scrum board",
          "value": "scrum"
        }
      ]
    }
  ],
  "executable": "jenkins.py",
  "postActions": {
    "all": [],
    "GitHub": []
  }
}
